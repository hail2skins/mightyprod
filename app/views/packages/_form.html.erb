<%= simple_form_for([@business, @package]) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :name, label: "Package Name" %>
  <%= f.input :description %>
  <%= f.input :count, label: "Number of visits in package?" %>
  <%= f.input :service_id, collection: @business.services.all, 
                           as: :radio_buttons, 
                           label: "Service provided in this package",
                           include_blank: true %>  
  <%= f.simple_fields_for :prices do |price| %>
    <%= render partial: 'prices/form', locals: { f: price } %>
  <% end %>
  
  <%= f.button :submit %>
<% end %>
