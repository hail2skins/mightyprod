<%= provide(:title, "Visit history for " + @customer.name) %>

<h2>Visit history for <%= @customer.name %></h2>

<table class="table table-bordered">
  <thead>
    <tr>
    <th>Visit notes</th>
      <th>Date of visit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.visit_notes %></td>
        <td><%= visit.date_of_visit.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Show', [@customer, visit] %></td>
        <td><%= link_to 'Edit', edit_customer_visit_path(@customer, visit) %></td>
        <td><%= link_to 'Destroy', [@customer, visit], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <%= link_to "Return to customer page", [@business, @customer] %> |
    <%= link_to "Return to main business page", [@owner, @business] %>