<%= provide(:title, "Services for " + @business.name) %>
<div class="container">
<h2>Services for <%= @business.name %></h2>

<table class="table table-bordered services">
  <thead>
    <tr>
      <th>Service name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.name, [@business, service] %></td>
        <td><%= number_to_currency(service.prices.last.amount) %></td>
        <td><%= link_to 'Show', [@business, service], class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_business_service_path(@business, service), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', [@business, service], class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <%= link_to "New Service", new_business_service_path(@business) %> | 
    <%= link_to "Return to main business page", [@owner, @business] %>
</div>