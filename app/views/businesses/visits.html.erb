<%= provide(:title, "Visits for " + @business.name) %>

<h2>Visits for <%= @business.name %></h2>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Visit notes</th>
      <th>Date of visit</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business.visits.each do |visit| %>
      <tr>
        <td><%= link_to visit.visit_notes, customer_visit_path(visit.customer, visit) %></td>
        <td><%= visit.date_of_visit.strftime("%m/%d/%Y") %></td>
        <td><%= visit.customer.name %></td>
        <td><%= link_to "Show", customer_visit_path(visit.customer, visit), class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", [:edit, visit.customer, visit], class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', [visit.customer, visit], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
